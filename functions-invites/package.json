{
  "name": "functions-invites",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --watch --project tsconfig.json",
    "serve": "npm run build && firebase emulators:start --only functions:invites",
    "shell": "npm run build && firebase functions:shell --only functions:invites",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions:invites",
    "logs": "firebase functions:log --only functions:invites",
    "test": "jest"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.3.2"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/node": "^18.0.0",
    "eslint": "^8.9.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.4.0",
    "firebase-functions-test": "^3.4.1"
  }
}
